<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/bluePrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeSearch" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/bluePrimary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"


        />

    <style name="AppTheme.SwitchTheme">
        <item name="android:colorControlActivated">@color/quantum_grey</item>
    </style>

    <style name="MyTheme.DayNight.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageViewButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:background">@drawable/background_image_button</item>-->
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="SpinnerTheme">
        <item name="colorAccent">@color/bluePrimary</item>
    </style>

    <!-- Aplica el estilo personalizado a la barra-->
    <style name="AppTheme.CustomToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/blueTertiary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorPrimary">@color/blackColor</item>

        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <!-- Aplica el estilo personalizado a cada menu option-->
    <style name="AppTheme.CustomPopupStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#F1F4F3</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name= "android:divider">@color/quantum_black_divider</item>
        <item name= "android:titleMarginBottom">4dp</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Aplica el ícono personalizado al botón de overflow de la barra -->
    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_black_24dp</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>


</resources>
