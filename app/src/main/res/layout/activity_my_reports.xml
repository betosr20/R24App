<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.MyReportsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userReportsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:listitem="@layout/my_reports_options" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/bluePrimary"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/noElementsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noReportsRegistered"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/blackColor"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userReportsList" />

</androidx.constraintlayout.widget.ConstraintLayout>
