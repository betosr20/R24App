<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueSecondary"
    android:backgroundTint="@color/blueSecondary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="Activities.MapActivity"
    tools:showIn="@layout/activity_map">

    <fragment
        android:id="@+id/map2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".Map
        sActivity" />

    <Switch
        android:id="@+id/switchButtonHeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="Calor"
        android:theme="@style/AppTheme.SwitchTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchButtonPins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Pines"
        app:layout_constraintStart_toEndOf="@id/switchButtonHeat"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/AppTheme.SwitchTheme" />

    <Switch
        android:id="@+id/switchButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Vista"
        android:theme="@style/AppTheme.SwitchTheme"
        app:layout_constraintStart_toEndOf="@+id/switchButtonPins"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonPopUpMenu"
        android:layout_width="135px"
        android:layout_height="135px"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="50dp"
        android:adjustViewBounds="false"
        android:backgroundTint="#B3FFFFFF"
        android:onClick="showPopup"
        android:scaleType="fitXY"
        android:src="@drawable/menubars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135px"
        android:layout_height="135px"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/uptodatelogo" />

</androidx.constraintlayout.widget.ConstraintLayout>